@{
    ViewData["Tittle"] = "PrikazRacun";
}
@model Seminarski.ViewModels.ProizvodPrikazRacunVM;

    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Naziv proizvoda</td>
                <td>Opis</td>
                <td>Cijena</td>
                <td>Popust</td>
                <td>Kolicina</td>
                <td>Ukupno</td>
            </tr>
        </thead>
<tbody>
    @foreach (var x in Model.rows)
    {
        <tr>
            <td>@x.Naziv</td>
            <td>@x.Opis</td>
            <td>@x.Cijena</td>
            <td>@x.Popust</td>
            <td>@x.Kolicina</td>
            <td>@x.Cijena*@x.Kolicina</td>
        </tr>
    }
</tbody>
    </table>

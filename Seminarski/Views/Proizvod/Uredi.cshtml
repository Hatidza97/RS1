@{
    ViewData["Tittle"] = "Uredi";
}
@model Seminarski.ViewModels.ProizvodUrediVM;

<form style="color:white" asp-action="SnimiUredjeno">
    <input asp-for="ProizvodID" value="@Model.ProizvodID" hidden />
    <div class="form-group">
        <label asp-for="NazivProizvoda" class="control-label">Naziv proizvoda:</label>
        <input asp-for="NazivProizvoda" value="@Model.NazivProizvoda" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Cijena" class="control-label">Cijena:</label>
        <input asp-for="Cijena"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Kolicina" class="control-label">Kolicina:</label>
        <input asp-for="Kolicina" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis proizvoda:</label>
        <input asp-for="Opis" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Slika proizvoda:</label><br />
        @*<input asp-for="SlikaUrl"  value="@Model.SlikaUrl" class="form-control" readonly />*@
        <img src="~/images/@Model.SlikaUrl" width="150px" height="150px"/>
    </div>
    <div class="form-group">
       <button class="btn">Spasi</button>
    </div>
    <div class="form-group">
    </div>
</form>

<style>
    body {
        background-color: #343a40;
    }
    button.btn{
        background-color:darkgray;
        color:black;
    }
</style>


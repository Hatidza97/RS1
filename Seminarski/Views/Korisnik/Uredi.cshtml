    </div>
    <div class="form-group">
        <label>Broj telefona:</label>
        <input asp-for="BrojTel" class="form-control" />
    </div>
    <div class="form-group">
        <label>Username:</label>
        <input asp-for="Username" class="form-control" type="text" />
    </div>
    <div class="form-group">
        <label>Sifra:</label>
        <input asp-for="Sifra" class="form-control" type="text" />
    </div>

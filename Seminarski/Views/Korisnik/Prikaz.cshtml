@{
    ViewData["Title"] = "Prikaz";
    var podaci=(List<Korisnik>)ViewData["nekiKey"];

}
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ime</th>
            <th>Prezime</th>
            <th>Telefon</th>
            <th>Username</th>
            <th>Lozinka</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var k in podaci)
        {
            <tr>
                <td>@k.Ime</td>
                <td>@k.Prezime</td>
                <td>@k.Telefon</td>
                <td>@k.Username</td>
                <td>@k.Lozinka</td>
                <td><a class="btn btn-info" asp-controller="Korisnik" asp-action="Uredi" asp-route-id="@k.Id">Uredi</a>|
                <a class="btn btn-danger" asp-controller="Korisnik" asp-action="Obrisi" asp-route-id="@k.Id">Obrisi</a>
                <a class="btn btn-info" asp-controller="Notifikacije" asp-action="Index" asp-route-id="@k.Id">Pošalji notifikaciju @k.Ime @k.Prezime</a>
                </td>
            </tr>
        }
    </tbody>

</table>

<a class="btn btn-info" asp-controller="Korisnik" asp-action="InsertKorisnik">Dodaj novog korisnika</a>
<style>
body { 
    background-image: url("https://cdn.wallpapersafari.com/2/43/UscYpa.jpg"); 
       background-position: center; 
}
 .btn-info{
     background-color:darksalmon;
 }
 .btn-danger{
     background-color:darkgrey;
 }
</style>
@{
    ViewData["Tittle"] = "Uredi";
}
@model Seminarski.ViewModels.CjenovnikUrediVM;

<h1>Uredjivanje usluge</h1>
<form asp-action="Snimi">
    <input asp-for="Id" value="@Model.Id" hidden />
    <div class="form-group">
        <label>Naziv usluge:</label>
        <input asp-for="NazivUsluge" value="@Model.NazivUsluge" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Cijena:</label>
        <input asp-for="Cijena" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Trajanje tretmana:</label>
        <input asp-for="Trajanje" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis usluge:</label>
        <input asp-for="Opis" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <button value="Snimi">Snimi</button>
    </div>
</form>


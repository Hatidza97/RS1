@{
    ViewData["Tittle"] = "Dodaj";
}
@model Seminarski.ViewModels.CjenovnikDodajVM;

<form asp-controller="Cjenovnik" asp-action="SnimiNovo">
    <div class="form-group">
        <label>Naziv usluge:</label>
        <input asp-for="NazivUsluge" class="form-control" />
    </div>
    <div class="form-group">
        <label>Opis usluge:</label>
        <input asp-for="Opis" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cijena usluge: </label>
        <input asp-for="Cijena" class="form-control" />
    </div>
    <div class="form-group">
        <label>Trajanje usluge(izraženo u satima) :</label>
        <input asp-for="Trajanje" class="form-control" />
    </div>
    <div class="form-group">
        <button class="btn btn-info">Snimi</button>
    </div>
</form>


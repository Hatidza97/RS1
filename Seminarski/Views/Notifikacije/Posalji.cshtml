@{
    ViewData["Tittle"] = "Posalji";
}
@model Seminarski.ViewModels.NotifikacijePosaljiVM;

<form>
    <input asp-for="UserID" value="@Model.UserID" hidden />
    <div class="form-group">
        <label>Primalac:</label>
        <input asp-for="Useri" value="@Model.Useri" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label>Poruka:</label>
        <input asp-for="Poruka" class="form-control" />
    </div>
    <div class="form-group">
        <a asp-controller="Korisnik" asp-action="Prikaz">Nazad</a>
        <a asp-controller="Notifikacije" asp-action="Prikaz">Prikazi sve notifikacije</a>
    </div>
</form>
